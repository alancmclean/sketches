<dialog class="mdl-dialog">
  <div class="mdl-dialog__content">
    <form action="<%- BASE_URL %>/create/submit" method="post" id="create-form">
        

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="create-name" name="name">
          <label class="mdl-textfield__label" for="create-name">Sketch Name</label>
        </div>


        <div class="mdl-textfield mdl-js-textfield">
          <textarea class="mdl-textfield__input" type="text" rows= "3" id="create-description" name="description"></textarea>
          <label class="mdl-textfield__label" for="create-description">Description</label>
        </div>


        <div class="mdl-selectfield mdl-js-selectfield" style="display:none">
          <select name="type" class="mdl-selectfield__select" id="create-type">
            <option value="" disabled >-----</option>
            <option value="web" selected>Web Based</option>
          </select>
          <label class="mdl-selectfield__label" for="create-type">Choose Sketch Type</label>
        </div>

        <div class="mdl-selectfield mdl-js-selectfield">
          <select name="template" class="mdl-selectfield__select" id="create-template">
            
            <option value="blank">Blank</option>
            <optgroup label="Web">
              <option value="basic" selected>Basic HTML</option>
              <option value="d3">D3 Visualization</option>
            </optgroup>
            <option value="existing">Import Existing</option>
          </select>
          <label class="mdl-selectfield__label" for="create-template">Sketch Template</label>
        </div>

      <div style="display:none" class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label" id="create-path-wrap">
          <input class="mdl-textfield__input" type="text" id="create-path" name="repoPath">
          <label class="mdl-textfield__label" for="create-repoPath">Repo Path</label>
        </div>

        <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="create-screenshots">
          <input type="checkbox" id="create-screenshots" class="mdl-checkbox__input" checked name="screenshots">
          <span class="mdl-checkbox__label">Enable Screenshots</span>
        </label>

  

        <div style="display:none">
          <p>
            <label>Team</label>
            <input type="text" name="team" />
          </p>

          <p>
            <label>Tags</label>
            <input type="text" name="tags" />
          </p>
        </div>

        <!-- <p>
          <input type="submit" />
        </p>         -->
      </form>
  </div>
  <div class="mdl-dialog__actions">
    <button type="button" class="mdl-button" onclick="document.getElementById('create-form').submit();">Create</button>
    <button type="button" class="mdl-button close">Cancel</button>
  </div>
</dialog>